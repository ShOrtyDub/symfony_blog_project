{% extends 'admin/base_admin.html.twig' %}

{% block title %}Commentaires index{% endblock %}

{% block body %}
    <h1>Commentaires index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Auteur</th>
                <th>DateHeure</th>
                <th>Texte</th>
                <th>Commentaire</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.auteur }}</td>
                <td>{{ commentaire.dateHeure ? commentaire.dateHeure|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commentaire.texte }}</td>
                <td>{{ commentaire.commentaire }}</td>
                <td>{{ commentaire.status }}</td>
                <td>
                    <a href="{{ path('app_commentaires_show', {'id': commentaire.id}) }}">show</a>
                    <a href="{{ path('app_commentaires_edit', {'id': commentaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div>
        <a href="{{ path('app_admin') }}">Back to home</a>
    </div>

{% endblock %}
