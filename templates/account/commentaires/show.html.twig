{% extends 'base.html.twig' %}

{% block title %}Blog Symfony | Commentaires Show{% endblock %}

{% block body %}
    <div>
        <h1>Commentaires</h1>

        {% if commentaires is defined %}
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Auteur</th>
                    <th>DateHeure</th>
                    <th>Texte</th>
                    <th>Commentaire</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for commentaire in commentaires %}
                    <tr>
                        <td>{{ commentaire.id }}</td>
                        <td>{{ commentaire.auteur }}</td>
                        <td>{{ commentaire.dateHeure ? commentaire.dateHeure|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ commentaire.texte }}</td>
                        <td>{{ commentaire.commentaire }}</td>
                        <td>
                            <a href="{{ path('app_account_commentaires_edit', {'id': commentaire.id}) }}">edit</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('app_account_commentaires_index') }}">back to list</a>

        {% else %}

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ commentaire.id }}</td>
                </tr>
                <tr>
                    <th>Auteur</th>
                    <td>{{ commentaire.auteur }}</td>
                </tr>
                <tr>
                    <th>DateHeure</th>
                    <td>{{ commentaire.dateHeure ? commentaire.dateHeure|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Texte</th>
                    <td>{{ commentaire.texte }}</td>
                </tr>
                <tr>
                    <th>Commentaire</th>
                    <td>{{ commentaire.commentaire }}</td>
                </tr>
                </tbody>
            </table>
{#            <div>#}
{#                <a href="{{ path('app_account_commentaires_edit', {'id': commentaire.id}) }}">edit</a>#}
{#            </div>#}
            <div>
                <a href="{{ path('app_account_commentaires_index') }}">back to list</a>
            </div>
        {% endif %}

    </div>
{% endblock %}
