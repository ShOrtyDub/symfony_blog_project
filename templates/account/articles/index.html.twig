{% extends 'base.html.twig' %}

{% block title %}Articles index{% endblock %}

{% block body %}

    <div>
        <h1>Articles index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Date</th>
                <th>Logo</th>
                <th>Texte</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.titre }}</td>
                    <td>{{ article.auteur }}</td>
                    <td>{{ article.date ? article.date|date('Y-m-d') : '' }}</td>
                    <td>{% if article.logo != '' %}
                            <img src="{{ article.logo }}" class="img-responsive ml-3" height="50px" width="auto">
                        {% endif %}
                    </td>
                    <td>{{ article.texte }}</td>
                    <td>
                        <a href="{{ path('app_account_articles_show', {'id': article.id}) }}">show</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_account_categories_index') }}">back to categories</a>
    </div>



{% endblock %}
