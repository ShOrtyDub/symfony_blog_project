{% extends 'base.html.twig' %}

{% block title %}Blog Symfony | Commentaires{% endblock %}

{% block body %}

    <div>
        <h1>Commentaires index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Auteur</th>
                <th>DateHeure</th>
                <th>Texte</th>
                <th>Commentaire</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for commentaire in commentaires %}
                <tr>
                    <td>{{ commentaire.id }}</td>
                    <td>{{ commentaire.auteur }}</td>
                    <td>{{ commentaire.dateHeure ? commentaire.dateHeure|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ commentaire.texte }}</td>
                    <td>{{ commentaire.commentaire }}</td>
                    <td>{{ commentaire.status }}</td>
                    <td>
                        <a href="{{ path('app_public_commentaires_show', {'id': commentaire.id}) }}">show</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_home') }}">back to list</a>

    </div>
{% endblock %}
